{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "trailing-comma": false,
    "max-line-length": [
      true,
      160
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "member-access": false,
    "max-classes-per-file": [
      true,
      10
    ],
    "no-bitwise": false,
    "no-namespace": false,
    "no-console": false
  }
}